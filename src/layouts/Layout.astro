---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Alert from '../components/Alert.astro';
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="og:title" content="TTNRT Corporation">
		<meta name="description" content="The future is now.">
		<meta name="og:description" content="The future is now.">
		<meta name="keywords" content="website, TTNRT, software, TTNRT Corporation, new, technology, tech">
		<meta name="author" content="TTNRT Corporation">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | TTNRT</title>
	</head>
	<body>
		<Navbar />
		<div class="p-3">
		<slot />
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	* {
		padding: 0;
		margin: 0;
	}
	html,
	body {
		height: 100vh;
	}
	h1 {
		font-size: 30px;
		font-weight: bold;
	}
	h2 {
		font-size: 25px;
		font-weight: bold;
	}
	h3 {
		font-size: 20px;
		font-weight: bold;
	}
	h4 {
		font-size: 15px;
		font-weight: bold;
	}
	h5 {
		font-size: 10px;
		font-weight: bold;
	}
.alert {
    @apply p-4 rounded mb-2 text-sm border;
  }
  .alert-blue {
    @apply bg-sky-400 dark:bg-sky-700;
  }
  .alert-warn {
    @apply bg-yellow-400 dark:bg-yellow-950;
  }
.nav-link {
	@apply font-medium text-gray-600 hover:text-gray-400 focus:outline-none focus:text-gray-400 dark:text-neutral-400 dark:hover:text-neutral-500 dark:focus:text-neutral-500;
}
body {
	@apply bg-white dark:bg-black flex flex-col text-black dark:text-white
}
.nav-brand {
	@apply inline-flex items-center gap-x-2 text-xl font-semibold dark:text-white;
}

a {
	@apply dark:text-sky-400 dark:hover:text-sky-300 text-sky-700 hover:text-sky-800;
}
</style>
<script>
console.log('Hey there! \nYou are viewing the developer preview of our website! \nIf you see any bugs, report them using our email!');

if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }


document.getElementById('theme-selector')?.addEventListener('click', () => {
    if (localStorage.theme === 'dark') {
      localStorage.theme = 'light';
      document.documentElement.classList.remove('dark');
    } else {
      localStorage.theme = 'dark';
      document.documentElement.classList.add('dark');
    }
  });
</script>